#!/usr/bin/env bash

function monit_monitor {
    monit monitor nginx_cc
    monit monitor cloud_controller_ng
    monit monitor ccng_monit_http_healthcheck
}

trap monit_monitor EXIT

monit unmonitor ccng_monit_http_healthcheck
monit unmonitor cloud_controller_ng
monit unmonitor nginx_cc
/var/vcap/jobs/cloud_controller_ng/bin/shutdown_drain 1>&2


echo 0 # tell bosh not wait for anything
exit 0
